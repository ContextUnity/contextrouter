# Contextrouter Environment Variables
# Copy to .env and fill in values
#
# Note: When used as a library (via apps/api), the host app's .env takes precedence.
# This .env is for standalone CLI tools, ingestion scripts, and tests.

# =============================================================================
# Required: Google Cloud / Vertex AI
# =============================================================================
PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
GOOGLE_GENAI_USE_VERTEXAI=true

# Blue-Green RAG: RAG_DB_NAME selects which datastore to use ("blue" or "green")
RAG_DB_NAME=blue
DATA_STORE_ID_BLUE=your-blue-datastore-id
DATA_STORE_ID_GREEN=your-green-datastore-id

GEMINI_LOCATION=us-central1
# GEMINI_MODEL=gemini-2.5-flash
# GEMINI_TEMPERATURE=0.3
# MAX_OUTPUT_TOKENS=8192

# GCS bucket for RAG data uploads
RAG_GCS_BUCKET=your-rag-gcs-bucket

# =============================================================================
# Retrieval Limits
# =============================================================================
# MAX_BOOKS=3
# MAX_VIDEOS=3
# MAX_QA=3
# MAX_KNOWLEDGE=5

# =============================================================================
# Citation Limits
# =============================================================================
# CITATIONS_BOOKS=20
# CITATIONS_VIDEOS=20
# CITATIONS_QA=20

# =============================================================================
# RAG Behavior
# =============================================================================
# Use lighter model when no results found
# NO_RESULTS_USE_LITE_LLM=1

# =============================================================================
# Web Search (Google CSE)
# =============================================================================
GOOGLE_CSE_ENABLED=0
GOOGLE_CSE_CX=
GOOGLE_CSE_API_KEY=
# GOOGLE_CSE_FALLBACK_ON_EMPTY_RAG=1
# GOOGLE_CSE_TRANSLATE_TO_EN_ON_EMPTY=1

# =============================================================================
# Langfuse Observability
# =============================================================================
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_BASE_URL=https://us.cloud.langfuse.com

# =============================================================================
# Debug
# =============================================================================
DEBUG_PIPELINE=0
DEBUG_WEB_SEARCH=0
