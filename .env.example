# ContextRouter Environment Variables
# Copy this file to .env and configure with your values

# --- Core ContextRouter Config ---
CONTEXTROUTER_DEBUG=false
CONTEXTROUTER_LOG_LEVEL=INFO
CONTEXTROUTER_CORE_CONFIG_PATH=settings.toml

# --- Project Configuration ---
# Absolute path to projects directory (contains project configs)
PROJECTS_DIR=/home/user/projects
# Default project for project-specific operations
DEFAULT_PROJECT=traverse

# --- Brain / Storage Delegation ---
# mode: 'local' (library import) or 'grpc' (network call)
BRAIN_MODE=grpc
BRAIN_GRPC_ENDPOINT=localhost:50051
# Used in mode='local' to connect to Postgres directly (NOT RECOMMENDED)
# BRAIN_DATABASE_URL=postgresql+psycopg://user:pass@localhost:5432/brain

# --- RAG Orchestration Policy ---
RAG_PROVIDER=brain
RAG_TENANT_ID=default

# --- Enrichment Queue (Redis) ---
ENRICHMENT_QUEUE_PREFIX=enrichment:
ENRICHMENT_BATCH_SIZE=50

# --- Model Selection (Default LLMs) ---
# Format: provider/model_id (e.g. vertex/gemini-2.5-flash)
CONTEXTROUTER_DEFAULT_LLM=vertex/gemini-2.5-flash
CONTEXTROUTER_INTENT_LLM=vertex/gemini-2.5-flash-lite
CONTEXTROUTER_GENERATION_LLM=vertex/gemini-2.5-flash

# --- Vertex AI / Google Cloud ---
VERTEX_PROJECT_ID=your-project-id
VERTEX_LOCATION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/key.json

# --- External Providers (Optional) ---
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
PERPLEXITY_API_KEY=pplx-...

# --- Observability ---
LANGFUSE_PUBLIC_KEY=pk-...
LANGFUSE_SECRET_KEY=sk-...
LANGFUSE_HOST=https://cloud.langfuse.com

# --- Shared Infrastructure ---
REDIS_URL=redis://localhost:6379/0

